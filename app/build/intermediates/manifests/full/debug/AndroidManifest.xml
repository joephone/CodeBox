<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joephone.codebox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.joephone.codebox.IndexActivity"
            android:label="@string/app_name"
            android:theme="@style/NoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:theme="@style/AppTheme.NoActionBar" -->
        <activity
            android:name="com.joephone.codebox.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.ScrollIndex"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.ListIndex"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.SlideIndex"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />

        <!-- scroll -->
        <activity
            android:name="com.joephone.codebox.act.scroll.act.PullToZoomAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.act.scroll.act.TopFloatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.act.scroll.act.MapScrollAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <!-- end scroll -->


        <!-- list -->
        <activity
            android:name="com.joephone.codebox.act.list.act.ListEditorAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.act.list.act.TimeLineAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <activity
            android:name="com.joephone.codebox.act.list.act.PinnedSectionListAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />

        <!-- end list -->


        <!-- sliding -->
        <activity
            android:name="com.joephone.codebox.act.sliding.act.SlidingUpPanelAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />
        <!-- end sliding -->

    </application>

</manifest>