<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/detail_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#f8f8f8" >

        <FrameLayout
            android:id="@+id/find_top_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/finderback"
                android:layout_width="46dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0.5dip"
                android:paddingBottom="15dip"
                android:paddingLeft="12dip"
                android:paddingRight="22dip"
                android:paddingTop="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/btn_back_black" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/register_click_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <FrameLayout
                android:id="@+id/register_title_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/register_title_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="社团活跃等级"
                    android:textColor="#323232"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#7f7f7f" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff0d4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="当前活跃等级 :"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/other_vote_level_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Lv1"
                android:textColor="#fff" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="等级规则"
            android:textColor="#7f7f7f"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#a7a7a7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/other_vote_level_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Lv1"
                    android:textColor="#fff" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#a7a7a7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="社团资料完善"
                android:textColor="#7f7f7f" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/other_vote_level_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Lv2"
                    android:textColor="#fff" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#a7a7a7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="成员数>25，帖子>5"
                android:textColor="#7f7f7f" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/other_vote_level_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Lv3"
                    android:textColor="#fff" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#a7a7a7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="成员数>50，帖子>10"
                android:textColor="#7f7f7f" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/other_vote_level_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Lv4"
                    android:textColor="#fff" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#a7a7a7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="成员数>100，帖子>20，活动>1"
                android:textColor="#7f7f7f" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/other_vote_level_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Lv5"
                    android:textColor="#fff" />
            </FrameLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#a7a7a7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="成员数>150，帖子>50，活动>5"
                android:textColor="#7f7f7f" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#a7a7a7" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="规则说明"
            android:textColor="#7f7f7f"
            android:textSize="16sp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#7f7f7f"
            android:textSize="14sp"
            android:text="1、社团活跃等级越高，排名和曝光越高。"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#7f7f7f"
            android:textSize="14sp"
            android:text="2、社团活跃等级越高，更受赞助商的青睐。"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#7f7f7f"
            android:textSize="14sp"
            android:text="3、社团活跃等级非即时更新，每日更新一次。"/>
    </LinearLayout>
    
</LinearLayout>