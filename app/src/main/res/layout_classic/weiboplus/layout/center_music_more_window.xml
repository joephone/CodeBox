<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >

                <TextView
                    android:id="@+id/tvWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气"
                    android:textSize="18sp"
                    android:textColor="@color/black2"
                    />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_215"
            android:gravity="center"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/more_window_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:clickable="true"
                    android:drawableTop="@drawable/news_note"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/more_window_item_margin"
                    android:text="文字" />

                <TextView
                    android:id="@+id/more_window_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toRightOf="@+id/more_window_local"
                    android:clickable="true"
                    android:drawableTop="@drawable/news_pics"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/more_window_item_margin"
                    android:text="照片" />

                <TextView
                    android:id="@+id/more_window_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@+id/more_window_online"
                    android:clickable="true"
                    android:drawableTop="@drawable/news_video"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/more_window_item_margin"
                    android:text="视频" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laySecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layFirst"
            android:gravity="center"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/more_window_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:clickable="true"
                    android:drawableTop="@drawable/news_scan"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/more_window_item_margin"
                    android:text="扫一扫" />

                <TextView
                    android:id="@+id/more_window_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@+id/more_window_collect"
                    android:clickable="true"
                    android:drawableTop="@drawable/news_camera"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/more_window_item_margin"
                    android:text="相机" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/center_music_window_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="@dimen/dp_10"
                    android:src="@drawable/tabbar_compose_background_icon_close" />
        </RelativeLayout>

</RelativeLayout>