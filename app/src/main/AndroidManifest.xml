<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joephone.codebox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name"
            android:theme="@style/NoTitle"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:theme="@style/AppTheme.NoActionBar"-->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>
        <activity
            android:name=".ScrollIndex"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>
        <activity
            android:name=".ListIndex"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>


        <!-- scroll -->
        <activity
            android:name=".act.scroll.act.PullToZoomAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>
        <activity
            android:name=".act.scroll.act.TopFloatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>
        <activity
            android:name=".act.scroll.act.MapScrollAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>
        <!-- end scroll -->


        <!-- list -->
        <activity
            android:name=".act.list.act.PinnedSectionListAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle"/>

        <!-- end list -->
    </application>

</manifest>